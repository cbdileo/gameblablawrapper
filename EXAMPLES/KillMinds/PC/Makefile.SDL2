CC = gcc

CFLAGS = -Os -I./WRAPPER
LDFLAGS = -lSDL2 -lSDL2_mixer 
DEFINES = -Wall -DRECENT_RENDER -DSAVE -DSOUND_ENABLED
DEFINES += -DSAVE
OUTPUT = killminds_sdl2

SOURCES = main.c WRAPPER/PC_SDL2.c
OBJS = ${SOURCES:.c=.o}

${OUTPUT}:${OBJS}
	${CC} -o ${OUTPUT} ${SOURCES} ${CFLAGS} ${LDFLAGS} ${DEFINES} 
	
clean:
	rm *.o
	rm ${OUTPUT}
